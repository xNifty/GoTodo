{
  "name": "gotodo-assets",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:js": "esbuild internal/server/public/js/site.js --bundle --minify --outfile=internal/server/public/js/site.min.js --allow-overwrite",
    "build:css": "esbuild internal/server/public/css/site.css --bundle --minify --outfile=internal/server/public/css/site.min.css --allow-overwrite",
    "build:assets": "npm run build:js && npm run build:css"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}
